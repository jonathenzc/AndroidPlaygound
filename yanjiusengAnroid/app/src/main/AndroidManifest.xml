<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zhangcheng.yanjiuseng" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 首页的activity -->
        <activity
            android:name=".appStartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 登录的activity -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".VerifyPhoneCodeActivity"
            android:label="@string/title_activity_verify_phone_code"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MajorChoosingActivity"
            android:label="@string/title_activity_major_choosing" >
        </activity>
        <activity
            android:name=".MajorChoosingClosing"
            android:label="@string/title_activity_major_choosing_closing" >
        </activity>
        <activity
            android:name=".ResearchDirectionActivity"
            android:label="@string/title_activity_research_direction" >
        </activity>
        <activity
            android:name=".AcademicCircle"
            android:label="@string/title_activity_academic_circle" >
        </activity>
        <activity
            android:name=".PersonalInfoActivity"
            android:label="@string/title_activity_personal_info" >
        </activity>
        <activity
            android:name=".nameChangeActivity"
            android:label="@string/title_activity_name_change" >
        </activity>
        <activity
            android:name=".genderChangeActivity"
            android:label="@string/title_activity_gender_change" >
        </activity>
        <activity
            android:name=".accountSafetyActivity"
            android:label="@string/title_activity_account_safety" >
        </activity>
        <activity
            android:name=".PasswordChangeActivity"
            android:label="@string/title_activity_change_password" >
        </activity>
    </application>

</manifest>
